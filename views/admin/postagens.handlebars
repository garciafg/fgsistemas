<h2>Lista de postagens</h2>

{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p> Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            {{!-- //Exibir o nome da categoria --}}
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a><br>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar postagem</button></a>
        </div>
    </div>


{{else}}
<p>não existe postagens</p>
{{/each}}




<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Adicionar postagem</button></a>